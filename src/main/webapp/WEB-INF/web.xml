<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>AdminDashboard</servlet-name>
        <servlet-class>com.assignment.assignmentwcd.controller.admin.DashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminDashboard</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

<!--    Category Router-->

    <servlet>
        <servlet-name>CreateCategory</servlet-name>
        <servlet-class>com.assignment.assignmentwcd.controller.admin.category.CreateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateCategory</servlet-name>
        <url-pattern>/admin/category/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CategoryUpdate</servlet-name>
        <servlet-class>com.assignment.assignmentwcd.controller.admin.category.UpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryUpdate</servlet-name>
        <url-pattern>/admin/category/update</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CategoryDelete</servlet-name>
        <servlet-class>com.assignment.assignmentwcd.controller.admin.category.DeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryDelete</servlet-name>
        <url-pattern>/admin/category/delete</url-pattern>
    </servlet-mapping>

    <!--    Product Router-->

    <servlet>
        <servlet-name>ProductCreate</servlet-name>
        <servlet-class>com.assignment.assignmentwcd.controller.admin.product.ProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductCreate</servlet-name>
        <url-pattern>/admin/product/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProductUpdate</servlet-name>
        <servlet-class>com.assignment.assignmentwcd.controller.admin.product.UpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductUpdate</servlet-name>
        <url-pattern>/admin/product/update</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProductDelete</servlet-name>
        <servlet-class>com.assignment.assignmentwcd.controller.admin.product.DeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductDelete</servlet-name>
        <url-pattern>/admin/product/delete</url-pattern>
    </servlet-mapping>

</web-app>